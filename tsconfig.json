{
  "compilerOptions": {
    // Enable latest features
    "lib": ["ESNext", "DOM"],
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleDetection": "force",
    "jsx": "react-jsx",
    "allowJs": true,
    "outDir": "./dist",
    // Bundler mode
    "moduleResolution": "Bundler",
    "allowImportingTsExtensions": false,
    "verbatimModuleSyntax": true,
    "noEmit": false, // Cambia esto a false para que TypeScript emita archivos en dist

    // Best practices
    "strict": true,
    "skipLibCheck": true,
    "noFallthroughCasesInSwitch": true,

    // Some stricter flags (disabled by default)
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noPropertyAccessFromIndexSignature": false,

    "rootDir": "./src", // Asegúrate de que esto esté aquí
  },
  "include": [
    "src/**/*",
    "types/**/*"  
  ], // Esto está bien
  "exclude": [
    "node_modules",
    "dist",
    "tests" // Excluye el directorio de pruebas si es necesario
  ]
}
